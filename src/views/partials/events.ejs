<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('head-tag.ejs') %>
		<!-- <title>IEEE SIESGST</title> -->
	</head>

	<body class="events-bg">
		<%- include('navbar.ejs') %>
		<% if(eventArray.activeE.length == 0){ %>
			<script>displayId('activeId')</script>
		<% }else{ %>
		<section class="upcoming-events p-3" id='activeId'>
			<h3
				class="
					about-headlines
					text-center text-white
					p-5
					pb-5
					fs-2
					fw-bolder
				"
			>
				<span class="position-relative underline-overall-orange"
					>Active Events</span
				>
			</h3>
			<% for(var i = eventArray.activeE.length-1; i>=0; i--) { %>
			<div class="container events-container p-4 my-3">
				<div class="row">
					<div class="col-md-4">
						<img
							src="<%= eventArray.activeE[i].pic %>" 
							class="
								img-thumbnail img-fluid
								w-100
								events-bg-img
								rounded
								p-2
							"
						/>
					</div>
					<div class="col-md-8 p-3 events-desc">
						<div class="row">
							<p>
								<span class="fw-bold">DESCRIPTION: </span>
								<br />
								<span class="fw-normal text-center">
									<%= eventArray.activeE[i].small %>
								</span>
							</p>
							<br />

							<div>
								<span class="fw-bolder">DATE: </span><%= eventArray.activeE[i].start %>
							</div>

							<div>
								<span class="fw-bolder">TIME: </span><%= eventArray.activeE[i].time %>
							</div>
						</div>

						<div class="row float-end">
							<div class="d-inline-flex mt-2">
								<% if(eventArray.activeE[i].website == 'NIL'){%>
									<script>displayId('knowA')</script>
								<% }else{ %>
								<a
									href="#"
									class="
										p-2
										pe-lg-5
										ps-lg-5
										ps-lg-3
										btn-events
									"
									id="knowA"
									>Know More</a
								>
								<% } %>
								&nbsp; &nbsp;
								<% if(eventArray.activeE[i].reg == 'NIL'){%>
									<script>displayId('regA')</script>
								<% }else{ %>
								<a
									href="#"
									class="
									p-2
									pe-lg-5
									ps-lg-5
									ps-lg-3
									btn-events
									" id="regA"
									>Register Now</a
								><% } %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<% } %>
		</section>
		<% } %>
		<% if(eventArray.upcomingE.length == 0){ %>
			<script>displayId('upcomingId')</script>
		<% }else{ %>
		<section class="upcoming-events p-3" id="upcomingId">
			<h3
				class="
					about-headlines
					text-center text-white
					p-5
					pb-5
					fs-2
					fw-bolder
				"
			>
				<span class="position-relative underline-overall-orange"
					>Upcoming Events</span
				>
			</h3>
			<% for(var i = eventArray.upcomingE.length-1; i>=0; i--) { %>
				<div class="container events-container p-4 my-3">
					<div class="row">
						<div class="col-md-4">
							<img
								src="<%= eventArray.upcomingE[i].pic %>" 
								class="
									img-thumbnail img-fluid
									w-100
									events-bg-img
									rounded
									p-2
								"
							/>
						</div>
						<div class="col-md-8 p-3 events-desc">
							<div class="row">
								<p>
									<span class="fw-bold">DESCRIPTION: </span>
									<br />
									<span class="fw-normal text-center">
										<%= eventArray.upcomingE[i].small %>
									</span>
								</p>
								<br />
	
								<div>
									<span class="fw-bolder">DATE: </span><%= eventArray.upcomingE[i].start %>
								</div>
	
								<div>
									<span class="fw-bolder">TIME: </span><%= eventArray.upcomingE[i].time %>
								</div>
							</div>
	
							<div class="row float-end">
								<div class="d-inline-flex mt-2">
									<% if(eventArray.upcomingE[i].website == 'NIL'){%>
										<script>displayId('knowU')</script>
									<% }else{ %>
									<a
										href="#"
										class="
										p-2
										pe-lg-5
										ps-lg-5
										ps-lg-3
										btn-events
										"
										id="knowU"
										>Know More</a
									>
									<% } %>
									&nbsp; &nbsp;
									<% if(eventArray.upcomingE[i].reg == 'NIL'){%>
										<script>displayId('regU')</script>
									<% }else{ %>
									<a
										href="#"
										class="
										p-2
										pe-lg-5
										ps-lg-5
										ps-lg-3
										btn-events
										" id="regU"
										>Register Now</a
									><% } %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<% } %>
		</section>
		<% } %>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
			crossorigin="anonymous"
		>
		function displayId(idName)
		{
			document.getElementById(idName).display = none;
		}
	</script>
		<%- include('footer.ejs') %>
    </body>
</html>
